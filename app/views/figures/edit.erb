<h1>Edit a figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" named="_method" value="PATCH">
    
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name %>">
  <br></br>

  <h3>New Title:</h3>
  <input type="text" name="title[name]" id="title_name">
  <br></br>

  <h3>Existing Titles:</h3>
  <%Title.all.each do |title| %>
  <label><%=title.name%></label>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id%>">
    <br></br>
  <%end%>

  <h3>New Landmark:</h3>
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br></br>
  <label>Year completed:</label>
  <input type="text" name="landmark[year_completed]">
  <br></br>

  <h3>Existing Landmarks:</h3>
  <%Landmark.all.each do |landmark| %>
    <label><%=landmark.name%></label>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <br></br>
  <%end%>

  <input type="submit" value="Edit Figure">

</form>